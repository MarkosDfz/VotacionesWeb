
@{
    ViewBag.Title = "Importar Usuarios";
}

<h2>Importar Usuarios</h2>

<h4>Cargue un archivo tipo Excel para importar usuarios</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @using (Html.BeginForm("Import", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div class="text-success">
                @TempData["DataOk"]
            </div>

            <div class="text-danger">
                @Html.Raw(ViewBag.Error)
                <br />
            </div>
            <input type="file" name="excelfile" required />
            <br />
            <input type="submit" value="Importar" class="btn btn-primary" />
            @Html.ActionLink("Volver", "Index", new { }, new { @class = "btn btn-success" })
        }
    </div>
    <div class="col-md-6" style="text-align:center">
        <img src="~/Content/Images/import.png" class="img-responsive" style="width:55%; height:210px;margin-left: auto;margin-right: auto;display: block;" />
        @Html.ActionLink("Descargar Formato", "DownloadFile", new { })
    </div>
</div>
