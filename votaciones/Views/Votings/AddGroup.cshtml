@model votaciones.Models.AddGroupView

@{
    ViewBag.Title = "Añadir Grupo";
}

<h2>Añadir Grupo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.VotingId)


        <div class="form-group">
            @Html.LabelFor(model => model.GroupId, "Grupo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("GroupId", null, "", htmlAttributes: new { @class = "form-control select-user" })
                @Html.ValidationMessageFor(model => model.GroupId, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar Grupo" class="btn btn-primary" />
                @Html.ActionLink("Volver", "Details", new { id = Model.VotingId }, new { @class = "btn btn-success" })
            </div>
        </div>
    </div>
}


@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/i18n/es.js"></script>
    <script>

        $('.select-user').select2({
            placeholder: "Buscar grupo",
            minimumInputLength: 2,
            language: "es",

        });

    </script>
}
