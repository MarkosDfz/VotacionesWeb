@model IEnumerable<votaciones.Models.UserIndexView>

@{
    ViewBag.Title = "Index";
}

<h2>Usuarios</h2>

<p>
    @Html.ActionLink("Nuevo Usuario", "Create", new { }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Pdf", "PDF", new { }, new { @class = "btn btn-default" })
    @Html.ActionLink("Excel", "XLS", new { }, new { @class = "btn btn-default" })
    @Html.ActionLink("Doc", "DOC", new { }, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Group)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAdmin)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Phone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Adress)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Grade)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Group)
    </td>
    <td>
        @if (!string.IsNullOrEmpty(item.Photo))
        {
            <img src="@Url.Content(item.Photo)" alt="Image" style="width:100px;height:100px;max-width:100%; height:auto;" />
        }
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsAdmin)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.UserId }) |
        @Html.ActionLink("Detalles", "Details", new { id = item.UserId }) |
        @Html.ActionLink("Cambiar Rol", "OnOffAdmin", new { id = item.UserId }) |
        @Html.ActionLink("Eliminar", "Delete", new { id = item.UserId })
    </td>
</tr>
}

</table>
