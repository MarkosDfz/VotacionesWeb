
@{
    ViewBag.Title = "Error";
}

<style>
    .myButton {
        background-color: #535270;
        border-radius: 32px;
        border: 1px solid #535270;
        display: inline-block;
        cursor: pointer;
        color: #ffffff;
        font-family: Arial;
        font-size: 13px;
        padding: 12px 24px;
        text-decoration: none;
        text-shadow: 0px 1px 0px #535270;
    }

    .myButton:hover {
        background-color: #535270;
        color: white;
    }

    .myButton:active {
        position: relative;
        top: 1px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <img src="~/Content/Images/repetido.png" class="img-responsive" style="width:94%;height:700px;max-width:100%;margin-left: auto; margin-right: auto; display: block">
    </div>
    <div class="row">
        <div class="col-md-12">
            <div align="center">
                @Html.ActionLink("INICIO", "Index", "Home", new { }, new { @class = "myButton" })
            </div>
        </div>
    </div>
</div>