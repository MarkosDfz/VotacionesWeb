@model IEnumerable<votaciones.Models.Group>

@{
    ViewBag.Title = "Index";
}

    <h2>Grupos de Votación</h2>

<p>
    @Html.ActionLink("Crear Grupo", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            Descripción
        </th>
        <th>
            Número De Miembros
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GroupMembers.Count)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.GroupId }) |
        @Html.ActionLink("Detalle", "Details", new { id = item.GroupId }) |
        @Html.ActionLink("Eliminar", "Delete", new { id = item.GroupId })
    </td>
</tr>
}

</table>
